@using FileManager.Services
@inject FileManager.Services.ThemeService theme

<AuthorizeView>
    <Authorized>
        <MudIconButton Icon="@theme.ToggleModeIcon()" Link="#" Color="Color.Inherit" OnClick="@((e) => theme.ToggleMode())">Toggle Dark/Light Mode</MudIconButton>
        <MudLink Href="Identity/Account/Manage" Style="color:white !important;">Hello, @context.User.Identity.Name!</MudLink>
        <form method="post" action="Identity/Account/LogOut">
            <MudIconButton Icon="@Icons.Material.Outlined.Logout" ButtonType="ButtonType.Submit" Color="Color.Inherit"></MudIconButton>
        </form>
    </Authorized>
    <NotAuthorized>
        <MudIconButton Icon="@theme.ToggleModeIcon()" Link="#" Color="Color.Inherit" OnClick="@((e) => theme.ToggleMode())">Toggle Dark/Light Mode</MudIconButton>
        <MudLink Href="Identity/Account/Register" Style="color:white !important;">Register</MudLink>
        <MudIconButton Icon="@Icons.Material.Outlined.Login" Link="Identity/Account/Login" Color="Color.Inherit" />
    </NotAuthorized>
</AuthorizeView>
